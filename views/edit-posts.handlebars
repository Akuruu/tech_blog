<div class = "card">
    <div class = "card-header">

        <h2> Edit Post </h2>

    </div>
    <form class="card-body" id="edit-post-form">
        <input name="post-id" value="{{post.id}}"/>

        <label class = "form-label" for="post-title">Title</label>
        <input type="text" name="post-title" value="{{post.title}}" class="form-input"/>

        <label class="form-label" for="post-description">Description</label>
        <textarea name="post-description" class="form-input">{{post.description}}</textarea>

        <button type="button" id="delete-btn" class="btn">Delete</button>
        <button type="button" id="edit-post-form" class="btn">Submit</button>
    </form>
</div>

<script src="/javascript/edit.js"></script>