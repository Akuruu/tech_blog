<div class="row">
  <div class="col-md-6">

    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="username-input-login">Username:</label>
        <input class="form-input" type="text" id="username-input-login"/>
      </div>

      <div class="form-group">
        <label for="password-input-login">Password:</label>
        <input class="form-input" type="password" id="password-input-login"/>
      </div>

      <div class="form-group">
        <button class="btn btn-danger" type="submit">Login</button>
      </div>
      <div>
          <a href="/signup">Sign up here</a>
      </div>
    </form>
  </div>

  <script src="/javascript/signup.js"></script>